<div class="jumbotron text-center">
    <h1>Editing Note</h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">

        <% if (errors.length > 0) { %>
            <div class="alert alert-danger">
                <% for (error of errors) { %>
                    <%= error %><br>
                <% } %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-sm-4">Created</div>
            <div class="col-sm-4"><%= moment(note.created).format('DD-MMM-YYYY HH:mm') %></div>
            <div class="col-sm-4"></div>
        </div>
        <div class="row">
            <div class="col-sm-4">Updated</div>
            <div class="col-sm-4"><%= moment(note.updated).format('DD-MMM-YYYY HH:mm') %></div>           
            <div class="col-sm-4"></div>
        </div>

        <form action="/notes/<%= note.guid %>" method="POST">
            
           <div class="form-group">
                <label>Note</label>
                <textarea name="noteBody" rows="5" class="form-control"><%= note.noteBody %></textarea>
            </div>

            <div class="form-group">
                <label>Tags</label>
                <input type="text" name="tags" class="form-control" value="<%= note.tags %>">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Update</button>
                <a href="/notes" class="back-button">Back</a>
            </div>

        </form>

    </div>
</div>